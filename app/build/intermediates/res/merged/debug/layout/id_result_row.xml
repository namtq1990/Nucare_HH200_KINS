<?xml version="1.0" encoding="utf-8"?>

<!-- ListView의 행(Row)마다 적용될 layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_layout_root"
    android:layout_width="450dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:focusable="false"
    android:gravity="center" >


    <TableLayout
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/image_press"
        android:paddingLeft="10dp"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/LogInfoTab_tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" >

            <TextView
                android:id="@+id/NuclideTxt"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingTop="3dp"
                android:text="Nuclide"
                android:textColor="@color/WhiteGray"
                android:textSize="14sp" />

            <!-- 댓글 갯수 표시 -->

            <TextView
                android:id="@+id/NuclideTxt2"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingTop="3dp"
                android:text="Nuclide"
                android:textColor="@color/WhiteGray"
                android:textSize="14sp" />

            <!-- 오른편에 표시 될 내용 Text -->

            <TextView
                android:id="@+id/DoserateTxt"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingTop="3dp"
                android:text="Dose rate"
                android:textColor="@color/WhiteGray"
                android:textSize="14sp" />

            <!-- 년월일시분을 표시할 공간 -->

            <TextView
                android:id="@+id/LevelTxt"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingTop="3dp"
                android:text="Confidence Level"
                android:textColor="@color/WhiteGray"
                android:textSize="14sp" />
        </TableRow>
    </TableLayout>

</LinearLayout>