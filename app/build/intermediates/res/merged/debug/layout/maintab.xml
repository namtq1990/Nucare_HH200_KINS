<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="23dp"
        android:background="#000000"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:scaleType="fitXY"
            android:scaleX="0.5"
            android:scaleY="0.7"
            android:src="@drawable/device" />

        <TextView
            android:id="@+id/Paired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="@color/WhiteGray3"
            android:textSize="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/libray"
            android:scaleType="fitXY"
            android:scaleX="0.5"
            android:scaleY="0.6" />

        <TextView
            android:id="@+id/Library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="@color/WhiteGray3"
            android:textSize="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/alram"
            android:scaleType="fitXY"
            android:scaleX="0.38"
            android:scaleY="0.75" />

        <TextView
            android:id="@+id/Alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="@color/WhiteGray3"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.17"
            android:background="#000000"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >
           
            
             <TextView
                android:id="@+id/Gainstabilizatton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="28dp"
              android:fontFamily="sans-serif-light"
                android:text=""
                android:textColor="@color/WhiteGray3"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/BatteryTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="3.5dp"
              android:fontFamily="sans-serif-light"
                android:text="50%"
                android:textColor="@color/WhiteGray3"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="1.5dp"
                android:background="@drawable/battery1"
                android:scaleType="fitXY"
                android:scaleX="0.4"
                android:scaleY="0.7"
                android:visibility="gone" />

            <view
                android:id="@+id/betterView_ProgressBar"
                android:layout_width="26dp"
                android:layout_height="13.4dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="17dp"
                class="android.HH100.Control.BatteryView"
                android:background="@color/RealBlack" />

            <DigitalClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textSize="13dp" />
            
        </LinearLayout>
    </LinearLayout>

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="333dp"
        android:background="#000000" >

        <LinearLayout
            android:id="@+id/tabBodyLayout"
            android:layout_width="fill_parent"
            android:layout_height="299dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabBottomLayout"
            android:layout_width="fill_parent"
            android:layout_height="34dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="2dp"
                android:background="#000000"
                android:measureWithLargestChild="true" />
        </LinearLayout>
    </TabHost>

</LinearLayout>