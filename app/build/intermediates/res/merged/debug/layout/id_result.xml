<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171616"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="#171616"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/FocusA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:background="#171616"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/scrollview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="11dp"
                    android:background="#171616"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="8dp"
                        android:background="#171616"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <CheckBox
                            android:id="@+id/Favorite_Checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Favorite"
                            android:textColor="#34B5E5"
                            android:textStyle="italic"
                            android:layout_gravity="bottom" />

                        <TextView
                            android:id="@+id/txt01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                           />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_weight="0.35"
                        android:background="#171616"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#171616"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:fontFamily="sans-serif-light"
                                android:gravity="left"
                                android:text="I"
                                android:textColor="#A6A6A6" 
                                android:textSize="19sp" /> 

                            <TextView
                                android:id="@+id/LogInfoTab_ManualID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:gravity="left"
                                android:text="nformation"
                                android:textColor="#A6A6A6"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/line3"
                                android:gravity="bottom" />
                        </LinearLayout>

                        <TableLayout
                            android:id="@+id/LogInfoTab_tableRow"
                            android:layout_width="460dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="6dp"
                            android:background="#171616"
                            android:paddingLeft="10dp"
                            android:stretchColumns="*" >

                            <TableRow
                                android:id="@+id/LogInfoTab_tableRow1"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="left" >

                                <TextView
                                    android:id="@+id/event_subject"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" 
                                    android:fontFamily="sans-serif-light" 
                                    android:paddingTop="3dp"
                                    android:text="@string/event"
                                    android:textColor="@color/BrightBlue"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/event_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="3dp"
                                    android:text="None"
                                    android:textColor="@color/WhiteGray"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/time_subject"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="3dp"
                                    android:text="@string/time"
                                    android:textColor="@color/BrightBlue"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/time_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="3dp"
                                    android:text="None"
                                    android:textColor="@color/WhiteGray"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/alarm_duration_subject"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="3dp"
                                    android:text="@string/alarm_duration"
                                    android:textColor="@color/BrightBlue"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/alarm_duration_info"
                                    android:layout_width="wrap_content" 
                                    android:layout_height="wrap_content" 
                                    android:paddingTop="3dp"
                                    android:text="None"
                                    android:textColor="@color/WhiteGray"
                                    android:textSize="14sp" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/LogInfoTab_tableRow2"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left" >

                                <TextView
                                    android:id="@+id/date_subject"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="3dp"
                                    android:text="@string/date"
                                    android:textColor="@color/BrightBlue"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/date_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="3dp"
                                    android:text="None"
                                    android:textColor="@color/WhiteGray"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/s_user_subject"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="3dp"
                                    android:text="@string/s_user"
                                    android:textColor="@color/BrightBlue"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/s_user_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="3dp"
                                    android:text="None"
                                    android:textColor="@color/WhiteGray"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/s_location_subject"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="3dp"
                                    android:text="@string/s_location"
                                    android:textColor="@color/BrightBlue"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/s_location_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="3dp"
                                    android:text="None"
                                    android:textColor="@color/WhiteGray"
                                    android:textSize="14sp" />
                            </TableRow>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="14sp" />
                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.30"
                        android:background="#171616"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#171616"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:fontFamily="sans-serif-light"
                                android:gravity="left"
                                android:text="D"
                                android:textColor="#A6A6A6"
                                android:textSize="19sp" />

                            <TextView
                                android:id="@+id/LogInfoTab_ManualID13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:gravity="left"
                                android:text="etected Nuclide"
                                android:textColor="#A6A6A6"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView1113"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/line3"
                                android:gravity="bottom" />
                        </LinearLayout>

                        <TableLayout
                            android:id="@+id/LogInfoTab_tableRow13"
                            android:layout_width="420dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="6dp"
                            android:background="#171616"
                            android:stretchColumns="4" >

                            <TableRow
                                android:id="@+id/LogInfoTab_tableRow232"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center" >

                                <TextView
                                    android:id="@+id/LogInfoTab_n1st_row_113"
                                    android:layout_width="84dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center"
                                    android:paddingTop="3dp"
                                    android:text="Nuclide"
                                    android:textColor="@color/WhiteGray"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/LogInfoTab_n1st_row_213"
                                    android:layout_width="84dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center"
                                    android:paddingTop="3dp"
                                    android:text="Nuclide"
                                    android:textColor="@color/WhiteGray"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/LogInfoTab_n1st_row_313"
                                    android:layout_width="126dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center"
                                    android:paddingTop="3dp"
                                    android:text="Dose rate"
                                    android:textColor="@color/WhiteGray"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/LogInfoTab_n1st_row_413"
                                    android:layout_width="126dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    android:gravity="center"
                                    android:paddingTop="3dp"
                                    android:text="Confidence Level"
                                    android:textColor="@color/WhiteGray"
                                    android:textSize="14sp" />
                            </TableRow>
                        </TableLayout>

                        <TextView
                            android:id="@+id/textView11134"
                            android:layout_width="455dp"
                            android:layout_height="1dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/line2" />

                        <LinearLayout
                            android:id="@+id/LogInfoTab_tableRow1335"
                            android:layout_width="450dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="3dp"
                            android:background="#171616"
                            android:orientation="horizontal" >

                            <ListView
                                android:id="@+id/ListView"
                                android:layout_width="450dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:transcriptMode="disabled" >
                            </ListView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.37"
                        android:background="#171616"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="#171616"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:fontFamily="sans-serif-light"
                                android:gravity="left"
                                android:text="C"
                                android:textColor="#A6A6A6"
                                android:textSize="19sp" />

                            <TextView
                                android:id="@+id/LogInfoTab_ManualID14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:gravity="left"
                                android:text="omment"
                                android:textColor="#A6A6A6"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView1114"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/line3"
                                android:gravity="bottom" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/editT_Comment1"
                            android:layout_width="520dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="6dp"
                            android:background="#171616"
                            android:ems="10"
                            android:fontFamily="sans-serif-light"
                            android:gravity="top"
                            android:inputType="text"
                            android:textColor="@color/White"
                            android:textSize="13dp" >

                        </EditText>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/FocusB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.80"
            android:background="#552B2928"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/Gallery_List"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/FocusC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_weight="0.9"
        android:background="#000000"
        android:orientation="horizontal"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="#000000"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ReachBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/image_press"
                android:padding="3dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scaleType="fitXY"
                android:scaleX="0.6"
                android:scaleY="0.9"
                android:src="@drawable/reach_back" />

            <ImageButton
                android:id="@+id/RadresponderBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/image_press"
                android:padding="3dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scaleType="fitXY"
                android:scaleX="0.6"
                android:scaleY="0.9"
                android:visibility="invisible"
                android:src="@drawable/radresponder" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="0.3"
            android:background="#000000"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="visible" >

            <ImageButton
                android:id="@+id/CameraBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/image_press"
                android:padding="3dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scaleType="fitXY"
                android:scaleX="0.6"
                android:scaleY="1.0"
                android:src="@drawable/camera" />

            <ImageButton
                android:id="@+id/VideoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/image_press"
                android:padding="3dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scaleType="fitXY"
                android:scaleX="0.6"
                android:scaleY="1.0"
                android:src="@drawable/video" />

            <ImageButton
                android:id="@+id/VoiceBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="160dp"
                android:background="@drawable/image_press"
                android:padding="3dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:scaleType="fitXY"
                android:scaleX="0.6"
                android:scaleY="1.0"
                android:src="@drawable/voice" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/RemoveTxtLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="#000000"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/removeEventTxt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/image_press"
                android:text="@string/remove_event"
                android:textColor="#28A5DE"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>