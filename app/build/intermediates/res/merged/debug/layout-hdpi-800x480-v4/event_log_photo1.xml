<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:id="@+id/IDL_MAIN"
    android:background="@color/RealBlack"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/IDL_PIC_MAIN"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:layout_marginBottom="5dp"
        android:padding="10dp">

        <TextView
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/EventLog_PhotoCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/DarkGray"
            android:text="Photo and Video : 0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/BrightBlue"
            android:textStyle="bold"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/IDL_PIC_GALLERY"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="8.4">

        <android.HH100.LogActivity.CHorizListView
            android:id="@+id/IDLIST_CHAT_GALLERY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
