<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#161615"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="23dp"
        android:background="#000000"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:scaleType="fitXY"
            android:scaleX="0.5"
            android:scaleY="0.7"
            android:src="@drawable/device" />

        <TextView
            android:id="@+id/Paired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="@color/WhiteGray3"
            android:textSize="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/libray"
            android:scaleType="fitXY"
            android:scaleX="0.5"
            android:scaleY="0.6" />

        <TextView
            android:id="@+id/Library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="@color/WhiteGray3"
            android:textSize="13dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/alram"
            android:scaleType="fitXY"
            android:scaleX="0.38"
            android:scaleY="0.75" />

        <TextView
            android:id="@+id/Alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="@color/WhiteGray3"
            android:textSize="13dp" />

      <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.17"
            android:background="#000000"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >
           
            
             <TextView
                android:id="@+id/Gainstabilizatton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="28dp"
              android:fontFamily="sans-serif-light"
                android:text=""
                android:textColor="@color/WhiteGray3"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/BatteryTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="3.5dp"
              android:fontFamily="sans-serif-light"
                android:text="50%"
                android:textColor="@color/WhiteGray3"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="1.5dp"
                android:background="@drawable/battery1"
                android:scaleType="fitXY"
                android:scaleX="0.4"
                android:scaleY="0.7"
                android:visibility="gone" />

            <view
                android:id="@+id/betterView_ProgressBar"
                android:layout_width="26dp"
                android:layout_height="13.4dp"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="17dp"
                class="android.HH100.Control.BatteryView"
                android:background="@color/RealBlack" />

            <DigitalClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3" >

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="44dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/setup_ModeTxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23.5dp"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif-light"
                android:text="B"
                android:textColor="#838383"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/setup_ModeTxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="0.5dp"
                android:fontFamily="sans-serif-light"
                android:text="ackground"
                android:textColor="#838383"
                android:textSize="22sp"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="353dp"
            android:layout_marginTop="37dp"
            android:fontFamily="sans-serif-light"
            android:text="Acq Time"
            android:textColor="@color/Brown"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Acq_TimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="408.5dp"
            android:layout_marginTop="37dp"
            android:fontFamily="sans-serif-light"
            android:text="0 sec"
            android:textColor="@color/White"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="454.5dp"
            android:layout_marginTop="37dp"
            android:fontFamily="sans-serif-light"
            android:text="CPS"
            android:textColor="@color/Brown"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cpsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="485dp"
            android:layout_marginTop="37dp"
            android:fontFamily="sans-serif-light"
            android:text="0.0 k"
            android:textColor="@color/White"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="520.5dp"
            android:layout_marginTop="37dp"
            android:fontFamily="sans-serif-light"
            android:text="Total Count"
            android:textColor="@color/Brown"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/totalCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="586dp"
            android:layout_marginTop="37dp"
            android:fontFamily="sans-serif-light"
            android:text="0.0 k"
            android:textColor="@color/White"
            android:textSize="12sp" />

        <view
            android:id="@+id/Spectrum"
            android:layout_width="fill_parent"
            android:layout_height="285dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="9dp"
            class="android.HH100.Control.SpectrumView" />

        <!--
      <view class="android.HH100.SpecturmSurfaceView"
      android:id="@+id/surfaceView1"
       android:layout_gravity="center"
      android:layout_width="500dp"
      android:layout_height="500dp" />
        -->

    </FrameLayout>

    <view
        android:id="@+id/SetupSpcSrc_ProgressBar"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        class="android.HH100.Control.ProgressBar"
        android:background="@color/WhiteGray2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:background="#000000"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

</LinearLayout>